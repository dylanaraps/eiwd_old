#!/bin/sh -e

ell_version=0.26

mkdir -p .cache build-aux
cd .cache
wget https://mirrors.edge.kernel.org/pub/linux/libs/ell/ell-$ell_version.tar.xz
tar xvf "ell-$ell_version.tar.xz"
cp -R "ell-$ell_version/ell/" ../ell
cd ..

autoreconf -fis
./configure
make
make check

make clean
cmake -B build -DBUILD_TESTING=ON
make  -C build
make  -C build check
